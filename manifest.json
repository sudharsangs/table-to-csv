{
    "manifest_version": 3,
    "name": "Table to CSV",
    "version": "1.0",
    "description": "Converts tables on any webpage to CSV or JSON",
    "icons": {
      "48": "icon.png"
    },
    "permissions": ["activeTab"],
    "action": {
      "default_icon": "icon.png",
      "default_title": "Convert Table",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  